{{#section 'css'}}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
<link rel="stylesheet" href="/assets/fontawesome/css/all.css" />
{{/section}}

{{#section 'javascript'}}
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
{{/section}}

<div class="container-fluid">
    <div class="row bg-dark">
        <div class="col-1">

        </div>
        <div class="col-10">
            {{>header-seller}}
        </div>
        <div class="col-1">

        </div>
    </div>
    <div class="row">
        <div class="col-1">

        </div>
        <div class="col-2">
            <div class="list-group mt-4">
                <div class="card text-center mx-auto" style="width: 7rem;">
                    <img src="/assets/images/icon-shop.png" style="width: 3rem;" class="card-img-top mx-auto mt-3"
                        alt="...">
                    <p class="card-text">Cửa hàng</p>
                    <a href="/seller/shop" class="stretched-link"></a>
                </div>
                <div class="card text-center mx-auto mt-2" style="width: 7rem;">
                    <img src="/assets/images/icon-trade.png" style="width: 3rem;" class="card-img-top mx-auto mt-3"
                        alt="...">
                    <p class="card-text">Trao đổi</p>
                    <a href="/seller/trade" class="stretched-link"></a>
                </div>
                <div class="card text-center mx-auto mt-2" style="width: 7rem;">
                    <img src="/assets/images/icon-statistic.png" style="width: 3rem;" class="card-img-top mx-auto mt-3"
                        alt="...">
                    <p class="card-text">Thống kê</p>
                    <a href="/seller/statistic" class="stretched-link"></a>
                </div>
            </div>
        </div>
        <div class="col-7">
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="/assets/images/seller_home_wall1.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="/assets/images/seller_home_wall2.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="/assets/images/seller_home_wall3.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-2">

        </div>
    </div>
    <div class="row">
        <div class="col-1">

        </div>
        <div class="col-10">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="your-products-tab" data-toggle="tab"
                        href="#nav-your-products" role="tab" aria-controls="nav-your-products" aria-selected="true">Sản
                        phẩm của bạn</a>
                    <a class="nav-item nav-link" id="history-tab" data-toggle="tab" href="#nav-history" role="tab"
                        aria-controls="nav-history" aria-selected="false">Lịch sử bán hàng</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-your-products" role="tabpanel"
                    aria-labelledby="products-auctioning-tab">
                    {{#if haveShop}}
                    <div class="row mt-4">
                        {{#each productsOnPage}}
                        <div class="col-3 mb-3">
                            <div class="card h-100">
                                <img src="/assets/photo-storage/{{{this.hinh_anh}}}" class="card-img-top mx-auto"
                                    alt="product">
                                <div class="card-body">
                                    <h6 class="card-title mx-left">{{this.ten_san_pham}}</h6>
                                </div>
                                <div class="card-footer bg-danger">
                                    <small class="text-white">Giá tiền: {{productPrice this.gia_tien}}</small></br>
                                    <small class="text-white">Số lượng: {{this.so_luong}}</small>
                                </div>
                            </div>
                            <a href="/seller/product-detail/{{{this.ma_so}}}" class="stretched-link"></a>
                        </div>
                        {{/each}}
                    </div>
                    <div class="row d-flex justify-content-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item {{#if previous.isDisabled}}disabled{{/if}}">
                                    <a class="page-link" href="/seller/page/{{previous.pageNumber}}" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                {{#each pagination}}
                                <li class="page-item {{#if this.isActive}}active{{/if}}"><a class="page-link"
                                        href="/seller/page/{{this.pageNumber}}">{{this.pageNumber}}</a>
                                </li>
                                {{/each}}
                                <li class="page-item {{#if next.isDisabled}}disabled{{/if}}">
                                    <a class="page-link" href="/seller/page/{{next.pageNumber}}" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    {{else}}
                    <div class="mt-4 alert alert-danger" role="alert">
                        Bạn chưa có cửa hàng vui lòng tạo cửa hàng để hiển thị danh sách sản phẩm
                    </div>
                    {{/if}}
                </div>
                <div class="tab-pane fade" id="nav-history" role="tabpanel" aria-labelledby="products-win-bidders-tab">
                    {{#if haveShop}}
                    <div class="row">
                        <table class="table mt-4 ml-4 mr-4 table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ngày bán</th>
                                    <th scope="col">Sản phẩm</th>
                                    <th scope="col">Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each sellHistories}}
                                <tr>
                                    <th scope="row">{{this.STT}}</th>
                                    <td>{{this.ngay_ban_view}}</td>
                                    <td>{{this.san_pham_du_lieu.ten_san_pham}}</td>
                                    <td>{{this.so_luong}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <div class="mt-4 alert alert-danger" role="alert">
                        Bạn chưa có cửa hàng vui lòng tạo cửa hàng để xem lịch sử
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
    </div>
    <div class="row">
        <div class="col-1">

        </div>
        <div class="col-10">
            {{>footer}}
        </div>
        <div class="col-1">

        </div>
    </div>
</div>