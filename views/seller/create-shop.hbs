{{#section 'css'}}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
<link rel="stylesheet" href="./assets/fontawesome/css/all.css" />
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
{{/section}}

{{#section 'javascript'}}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>
    var quill = new Quill('#editor-container', {
        theme: 'snow'
    });
    var form = document.querySelector('#formAddNewProduct');
    form.onsubmit = function () {
        // Populate hidden form on submit
        var about = document.querySelector('#inputFullDes');
        var fullDes = $("#editor-container .ql-editor").html();
        //about.value =  JSON.stringify(quill.getContents());
        about.value = fullDes;
        // No back end to actually submit to!
        return true;
    };
</script>
{{/section}}

<div class="container-fluid">
    <div class="row bg-dark">
        <div class="col-1">

        </div>
        <div class="col-10">
            {{>header-seller}}
        </div>
        <div class="col-1">

        </div>
    </div>
    <div class="row mt-3">
        <div class="col-1">

        </div>
        <div class="col-10 bg-white shadow-sm border border-success">
            <form class="mt-4" id="formAddNewProduct" action="../seller/add-new-product" method="post"
                enctype="multipart/form-data">
                <legend class="mb-4">Tạo cửa hàng</legend>
                <div class="form-row">
                    <div class="col-6">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="inputProductName">Tên cửa hàng</label>
                                <input type="text" class="form-control" id="inputProductName" name="ProductName"
                                    required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label>Full Description</label>
                        <div id="editor-container" class="form-control" style="height: 350px;">
                        </div>
                        <textarea name="FullDes" style="display:none" id="inputFullDes"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-lg mt-3 mb-3">Submit</button>
            </form>
        </div>
        <div class="col-1">

        </div>
    </div>

</div>
<div class="row">
    <div class="col-1">

    </div>
    <div class="col-10">
        {{>footer}}
    </div>
    <div class="col-1">

    </div>
</div>
</div>