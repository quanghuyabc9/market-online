<div class="container-fluid">
    <div class="row bg-dark">
        <div class="col-1">

        </div>
        <div class="col-10">
            {{>header-seller}}
        </div>
        <div class="col-1">

        </div>
    </div>
    <div class="row mt-3">
        <div class="col-1">
            
        </div>
        <div class="col-10 bg-white shadow-sm border border-success">
            <form class="mt-4" id="formAddNewProduct" action="../seller/add-new-product" method="post"
                enctype="multipart/form-data">
                <legend class="mb-4">Add new product</legend>
                {{#if showAlert}}
                <div class="alert alert-warning" role="alert">
                    Please chose at least 3 images for product
                </div>
                {{/if}}
                <div class="form-row">
                    <div class="col-6">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="inputProductName">Product Name</label>
                                <input type="text" class="form-control" id="inputProductName" name="ProductName"
                                    required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="inputStartPrice">Start Price</label>
                                <input type="number" class="form-control" id="inputStartPrice" name="StartPrice"
                                    placeholder="đ" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputStepPrice">Step Price</label>
                                <input type="number" class="form-control" id="inputStepPrice" placeholder="đ"
                                    name="StepPrice" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputByNowPrice">By Now Price</label>
                                <input type="number" class="form-control" id="inputByNowPrice" placeholder="đ"
                                    name="BuyNowPrice">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="inputCategory">Category</label>
                                <select id="inputCategory" class="form-control" name="Category">
                                    <option>Nike</option>
                                    <option>Air jordan</option>
                                    <option>adidas</option>
                                    <option>New Balance</option>
                                    <option>Under Armour</option>
                                    <option>Asics</option>
                                    <option>Puma</option>
                                    <option>Reebok</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputQuantity">Quantity</label>
                                <input type="number" class="form-control" id="inputQuantity" name="Quantity" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputAuctionPeriod">Auction Period</label>
                                <input type="number" class="form-control" id="inputAuctionPeriod" name="AuctionPeriod"
                                    min="1" placeholder="hours - example: 5 hours" required>
                            </div>
                        </div>
                        <div class="input-group mb-2 mt-2 px-2 py-2 rounded-pill shadow-sm border border-success">
                            <input id="inputAvatar" type="file" class="form-control border-0" name="inputAvatar"
                                multiple>
                            <label for="inputAvatar" class="font-weight-light text-muted mt-2">Upload image for
                                product</label>
                        </div>

                        <div class="form-group form-check mt-4">
                            <input type="checkbox" class="form-check-input" id="inputAutoExtend" name="AutoExtend">
                            <label class="form-check-label" for="inputAutoExtend">Auto extend</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="inputTinyDes">Tiny Description</label>
                                <input type="text" class="form-control" id="inputTinyDes" name="TinyDes">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label>Full Description</label>
                                <div id="editor-container" class="form-control" style="height: 350px;">
                                </div>
                                <textarea name="FullDes" style="display:none" id="inputFullDes"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-lg mt-3 mb-3">Submit</button>
            </form>
        </div>
        <div class="col-1">
           
        </div>
    </div>

</div>
<div class="row">
    <div class="col-1">

    </div>
    <div class="col-10">
        {{>footer}}
    </div>
    <div class="col-1">

    </div>
</div>
</div>