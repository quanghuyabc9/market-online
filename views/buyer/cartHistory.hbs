<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        <div class="cart_inner" id="cart-body">
            <div class="table-responsive">
                {{#if ps.length}}
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Ngày lập phiếu</th>
                            <th scope="col">Tổng tiền</th>
                            <th scope="col">Chi phí ship</th>
                            <th scope="col">Tình trạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each ps}}
                        <tr>
                            <td>{{ngay_lap_phieu}}</td>
                            <td>{{tong_tien}}</td>
                            <td>{{chi_phi_giao_hang}}</td>
                            <td>
                                {{tinh_trang}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <div class="alert alert-info text-center">My cart is empty</div>
                {{/if}}
            </div>
        </div>
    </div>
</section>